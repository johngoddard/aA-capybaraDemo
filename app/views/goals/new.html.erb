<h2> Create a new goal!</h2>
<form action="<%= goals_url %>" method="post">
  <%= form_token %>
  <label>Title
    <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>
  <label>Description
    <textarea name="goal[description]" rows="8" cols="40"><%= @goal.description %></textarea>
  </label>

  <label>Status
    <select name="goal[status]" id="StatusSelect">
    <option value="active">Active</option>
    <option value="completed">Completed</option>
    </select>
  </label>

  <label>Privacy
    <label>Private<input type="radio" name="goal[private_goal]" value="true"></label>
    <label>Public<input type="radio" name="goal[private_goal]" value="false"></label>
  </label>
  <input type="submit" value="Create New Goal">
</form>
